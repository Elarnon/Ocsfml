name = "ocsfml"
version = "2.0a"
description = "ocaml port of the C++ SFML library"

package "system" (
	requires="bigarray"
	requires(mt)="threads"
	archive(byte) = "ocsfmlsystem.d.cma"
	archive(toploop) = "ocsfmlsystem.d.cma"
	archive(native) = "ocsfmlsystem.cmxa"
)

package "window" (
	requires="ocsfml.system"
	archive(byte) = "ocsfmlwindow.d.cma"
	archive(toploop) = "ocsfmlwindow.d.cma"
	archive(native) = "ocsfmlwindow.cmxa"
)

package "graphics" (
	requires="ocsfml.window"
	archive(byte) = "ocsfmlgraphics.d.cma"	
	archive(toploop) = "ocsfmlgraphics.d.cma"	
	archive(native) = "ocsfmlgraphics.cmxa"
)

package "audio" (
	requires="ocsfml.system"
	archive(byte) = "ocsfmlaudio.d.cma"
	archive(toploop) = "ocsfmlaudio.d.cma"
	archive(native) = "ocsfmlaudio.cmxa"
)

package "network" (
	requires="ocsfml.system"
	archive(byte) = "ocsfmlnetwork.d.cma"
	archive(toploop) = "ocsfmlnetwork.d.cma"
	archive(native) = "ocsfmlnetwork.cmxa"
)