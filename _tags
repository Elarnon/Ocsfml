<camlpp/ExternalCpp> : include
<camlpp/ExternalCpp/*.ml> : syntax(camlp4o), package(camlp4.quotations), package(camlp4.extend)

<System> or <Window> or <Graphics> or <Audio> or <Network> or <Test>: include

<System/*.{h,c}pp> : include_sfml_system
"System/libocsfmlsystem.a" : use_sfml_system
<System/*.cm{x,}a> : use_sfml_system, use_libocsfmlsystem
<System/*.ml> : package(external_cpp), use_cpp_external

<Window/*.{h,c}pp> : include_sfml_window
"Window/libocsfmlwindow.a" : use_sfml_window
<Window/*.cm{x,}a> : use_sfml_window, use_libocsfmlwindow
<Window/*.ml> : package(external_cpp), use_cpp_external

<Graphics/*.{h,c}pp> : include_sfml_graphics
"Graphics/libocsfmlgraphics.a" : use_sfml_graphics
<Graphics/*.cm{x,}a> : use_sfml_graphics, use_libocsfmlgraphics
<Graphics/*.ml> : package(external_cpp), use_cpp_external

<Audio/*.{h,c}pp> : include_sfml_audio
"Audio/libocsfmlaudio.a" : use_sfml_audio
<Audio/*.cm{x,}a> : use_sfml_audio, use_libocsfmlaudio, package(bigarray)
<Audio/*.ml> : package(external_cpp), package(bigarray), use_cpp_external

<Network/*.{h,c}pp> : include_sfml_network
"Network/libocsfmlnetwork.a" : use_sfml_network
<Network/*.cm{x,}a> : use_sfml_network, use_libocsfmlnetwork
<Network/*.ml> : package(external_cpp), use_cpp_external

<Test/test_clock.{byte,native}> : use_ocsfmlsystem
<Test/test_thread.{byte,native}> : use_ocsfmlsystem
<Test/test_window.{byte,native}> : use_ocsfmlwindow
<Test/test_graphics.{byte,native}> : use_ocsfmlgraphics, use_ocsfmlwindow, use_ocsfmlsystem
<Test/test_object.{byte,native}> : use_ocsfmlgraphics, use_ocsfmlwindow, use_ocsfmlsystem, profile
<Test/test_pong.{byte,native}> : use_ocsfmlgraphics, use_ocsfmlwindow, use_ocsfmlsystem
<Test/test_audio.{byte,native}> : use_ocsfmlaudio, use_ocsfmlsystem, package( bigarray )
<Test/test_pong_objects.{byte,native}> : use_ocsfmlgraphics, use_ocsfmlwindow, use_ocsfmlaudio, use_ocsfmlsystem
